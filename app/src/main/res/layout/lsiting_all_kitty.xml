<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:weightSum="2">


                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/banerImg"
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/banerImg2"
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/postImageView"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/redius"
                android:elevation="3dp"
                android:scaleType="centerCrop"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:text="Loading..."
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/packageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:singleLine="true"
                    android:text="Loading..."
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grayText"
                    android:textSize="14sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">


                    <TextView
                        android:id="@+id/totalMember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_bold"
                        android:singleLine="true"
                        android:text="Loading..."
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/grayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/EmiPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_bold"
                        android:singleLine="true"
                        android:text="Loading..."
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/grayText"
                        android:textSize="15sp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/purchased"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:singleLine="true"
                    android:text="Loading..."
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grayText"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/NoOfMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:singleLine="true"
                    android:text="Loading..."
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/desreption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:singleLine="true"
                    android:text="Loading..."
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/green"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/termCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text="Loading..."
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/red"
                    android:textSize="14sp" />

            </LinearLayout>







        </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>