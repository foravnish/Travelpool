<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:layout_marginTop="4dp">

                            <com.android.volley.toolbox.NetworkImageView
                                android:id="@+id/imgaeView"
                                android:layout_width="match_parent"
                                android:layout_height="105dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/no_listing" />
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/linerLayoutOffer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:visibility="visible"
                            android:background="#9e9d24"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli"
                                android:text="ON OFFER"
                                android:textColor="@color/white"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </RelativeLayout>










                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:fontFamily="@font/muli_bold"
                        android:singleLine="true"
                        android:text="Loading..."
                        android:textColor="#012b72"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/muli"
                        android:singleLine="true"
                        android:text="Loading"
                        android:textColor="#555555"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_bold"
                            android:text="vasundhara"
                            android:textColor="#111111" />

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/muli"
                            android:text=""
                            android:textColor="@color/orange"
                            android:textSize="13sp"
                            />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/subcatListing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:maxLines="2"
                        android:fontFamily="@font/muli"

                        android:text="loading"
                        android:textColor="@color/green"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/totlareview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="(3 Rating)"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>