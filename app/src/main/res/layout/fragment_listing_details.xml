<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="fitXY"
                        android:focusable="true"
                        android:adjustViewBounds="true"/>


                </RelativeLayout>


            </RelativeLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:focusable="true"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/shareDetail"
                    android:layout_width="29dp"
                    android:layout_height="26dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_menu_share" />


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="left|bottom"
                    android:text="Loading Loading"
                    android:textColor="@color/orange"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/packageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="2dp"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/muli"
                    android:gravity="left|bottom"
                    android:text="Loading"
                    android:textColor="@color/black"
                    android:textSize="18dp" />




            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/orange"
                    android:drawableLeft="@drawable/check"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center_vertical"
                    android:paddingRight="3dp"
                    android:text="Loading "
                    android:drawableTint="@color/orange"
                    android:textColor="@color/black"
                    android:textSize="15dp" />



            </RelativeLayout>


            <TextView
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/orange"
                android:drawableLeft="@drawable/check"
                android:drawablePadding="10dp"
                android:drawableTint="@color/orange"
                android:fontFamily="@font/muli"
                android:text="Loading"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/instal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/orange"
                android:drawableLeft="@drawable/check"
                android:drawablePadding="10dp"
                android:drawableTint="@color/orange"
                android:fontFamily="@font/muli"
                android:text="0120-274087"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/penality_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/orange"
                android:drawableLeft="@drawable/check"
                android:drawablePadding="10dp"
                android:drawableTint="@color/orange"
                android:fontFamily="@font/muli"
                android:text="0120-274087"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lucky_draw_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"

                android:backgroundTint="@color/orange"
                android:drawableLeft="@drawable/check"
                android:drawablePadding="10dp"
                android:drawableTint="@color/orange"
                android:fontFamily="@font/muli"
                android:text="0120-274087"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/payment_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"

                android:backgroundTint="@color/orange"
                android:drawableLeft="@drawable/check"
                android:drawablePadding="10dp"
                android:drawableTint="@color/orange"
                android:fontFamily="@font/muli"
                android:text="0120-274087"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/term_and_cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"

                android:backgroundTint="@color/orange"
                android:drawableLeft="@drawable/check"
                android:drawablePadding="10dp"
                android:drawableTint="@color/orange"
                android:fontFamily="@font/muli"
                android:text="0120-274087"

                android:textColor="@color/black"
                android:textSize="16dp" />


            <Button
                android:id="@+id/joinNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"


                android:background="@drawable/strock_btn_green"
                android:fontFamily="@font/muli_bold"
                android:text="Join Kitty"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16dp" />




        </LinearLayout>
    </ScrollView>

</LinearLayout>