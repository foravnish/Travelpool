<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linera1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/relat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/orange"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/textBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="21dp"
                    android:textColor="#fff"
                    android:text="Edit Profile"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.gelitenight.waveview.library.WaveView
                    android:id="@+id/wave"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />


                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/imageView"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="120dp"-->
                <!--android:layout_marginTop="35dp"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--app:civ_border_color="@color/white"-->
                <!--app:civ_border_width="2dp" />-->

                <TextView
                    android:id="@+id/tve_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tve_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/tve_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/muli_semibold"
                    android:textSize="18sp"/>


                <!--<TextView-->
                <!--android:id="@+id/editPic"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="2dp"-->
                <!--android:drawableLeft="@drawable/edit"-->
                <!--android:drawablePadding="5dp"-->
                <!--android:padding="8dp"-->
                <!--android:drawableTint="@color/white"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:fontFamily="@font/muli_semibold"-->
                <!--android:text="Change Photo"-->
                <!--android:textColor="#fff"-->
                <!--android:layout_marginRight="2dp"-->
                <!--android:textSize="13sp" />-->
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp"
                android:background="#ecd6c7"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_mobile"
                    android:layout_marginBottom="10dp"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:text="User ID "
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tve_user_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tve_mobile"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_user_id"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_bold"
                    android:text="#"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp"
                android:background="#fff"
                >


                <TextView
                    android:id="@+id/tv_city2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user_id"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:fontFamily="@font/muli_semibold"
                    android:text="Email ID"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tve_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tve_user_id"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_city"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_bold"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp"
                android:background="#ecd6c7">


                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:text="Address"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tve_addres"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tve_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_dob"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_bold"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp"
                android:background="#fff">


                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:text="City"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tve_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tve_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_city"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_bold"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp"
                android:background="#ecd6c7">


                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:text="State"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tve_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tve_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_state"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_bold"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp"
                android:background="#fff">


                <TextView
                    android:id="@+id/tv_pincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:text="Pincode"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tve_pincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tve_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_pincode"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_bold"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp"
                android:background="#ecd6c7">


                <TextView
                    android:id="@+id/tv_aadhar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:text="Aadhar No"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tve_aadharNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tve_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_state"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_bold"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp"
                android:background="#fff">


                <TextView
                    android:id="@+id/tv_panNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:text="Pan Card No"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tve_panNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tve_city"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_pincode"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_bold"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp"
                android:background="#ecd6c7">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="Aadhar Image"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aadhar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:text="Upload Aadhar Image"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/aadharImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp"
                android:background="#fff">


                <TextView
                    android:id="@+id/pan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="Pan Image"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/pan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:text="Upload Pan Image"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/panImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/pan2"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone"
                android:padding="12dp"
                android:background="#ecd6c7">


                <TextView
                    android:id="@+id/pass1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="Passport Image"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pass2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:text="Upload Passport Image"
                    android:textColor="@color/md_grey_700"
                    android:textSize="16sp" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/passportImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:layout_below="@+id/pass2"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


            <Button
                android:id="@+id/UpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/strock_btn_org"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:layout_marginRight="10dp"
                android:text="Update Profile"
                android:textColor="#fff"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>





    <LinearLayout
        android:id="@+id/linera2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginBottom="20dp"
            android:text="Login to Proceed" />

        <!-- TODO: Update blank fragment layout -->
        <Button
            android:id="@+id/loginNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/yellow"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="LOGIN NOW" />

    </LinearLayout>


</LinearLayout>